{
  "name": "@v402pay/core",
  "version": "0.3.0",
  "description": "v402pay types, canonicalization, hashing, and Solana verification",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "license": "MIT",
  "author": "Valeo",
  "homepage": "https://github.com/valeo-cash/v402#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/valeo-cash/v402.git",
    "directory": "packages/core"
  },
  "keywords": ["v402", "payment", "solana", "usdc", "402", "web3", "ai-agent", "crypto"],
  "engines": { "node": ">=18" },
  "publishConfig": { "access": "public" },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@noble/ed25519": "^2.1.0"
  },
  "peerDependencies": {
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0"
  },
  "peerDependenciesMeta": {
    "@solana/spl-token": { "optional": true },
    "@solana/web3.js": { "optional": true }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.3.5",
    "typescript": "~5.6.0",
    "vitest": "^2.1.6"
  }
}
