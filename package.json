{
  "name": "v402pay-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "vitest run",
    "verify": "pnpm -r build && pnpm test && pnpm lint",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "db:push": "cd infra/supabase && supabase db push",
    "seed-demo": "pnpm --filter @v402pay/gateway exec node scripts/seed-demo.mjs",
    "server": "node merchant-server.mjs",
    "play": "pnpm seed-demo && pnpm run server",
    "docs:dev": "pnpm --filter web dev",
    "docs:build": "pnpm --filter web build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@noble/ed25519": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "fastify": "^4.0.0",
    "next": "^14.0.0",
    "turbo": "^2.3.0",
    "typescript": "~5.6.0",
    "vitest": "^2.1.6"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@v402pay/core": "workspace:*",
    "@v402pay/gateway": "workspace:*",
    "@v402pay/sdk": "workspace:*",
    "@v402pay/mcp-server": "workspace:*",
    "@v402pay/mcp-client": "workspace:*",
    "@v402pay/agent": "workspace:*",
    "@v402pay/langchain": "workspace:*",
    "@v402pay/crewai": "workspace:*"
  }
}
