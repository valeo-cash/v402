{
  "name": "v402pay-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "verify": "pnpm -r build && pnpm test && pnpm lint",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "db:push": "cd infra/supabase && supabase db push",
    "seed-demo": "pnpm --filter @v402pay/gateway exec node scripts/seed-demo.mjs",
    "server": "node merchant-server.mjs",
    "play": "pnpm seed-demo && pnpm run server"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "turbo": "^2.3.0",
    "typescript": "~5.6.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@v402pay/core": "^0.1.0",
    "@v402pay/gateway": "^0.1.0",
    "@v402pay/sdk": "^0.1.0"
  }
}
